<Window x:Class="WpfApp12.CategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Okno kategorii" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ListBox x:Name="subcategoryList" SelectionChanged="subcategoryList_SelectionChanged"/>

        <StackPanel Grid.Row="1">
            <TextBlock Text="Szczegóły kategorii:" FontWeight="Bold"/>
            <TextBlock x:Name="categoryDetailsTextBlock"/>
        </StackPanel>
    </Grid>
</Window>
